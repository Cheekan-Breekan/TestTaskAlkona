@model CreateContractViewModel
@{
    Model.Items.Add(new CreateContractItemsViewModel());
}

<h1 class="heading">Заполнение договора</h1>

<div class="lone-field-page m-5">
    <form asp-action="@nameof(HomeController.CreateContract)">
        <div asp-validation-summary="All" class="text-danger fs-4"></div>
        <div>
            <label class="fs-5 m-0" asp-for="Number"></label>
            <div>
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <input class="box" asp-for="Number" />
        </div>
        <span>Услуги, входящие в договор: </span>
        <div class="mt-3" id="contractItems">
            <div class="contractItem">
                <div>
                    <label class="fs-5 m-0" for="itemName">Наименование</label>
                    <div>
                        <input class="box" asp-for="Items[0].Name" />
                    </div>
                </div>
                <div>
                    <label class="fs-5 m-0" for="itemPrice">Цена</label>
                    <div>
                        <input class="box" type="number" asp-for="Items[0].Price" />
                    </div>
                </div>
            </div>
        </div>
        <button type="button" class="btn mb-4" id="addContractItem">Добавить еще</button>
        <button type="submit" class="btn mb-4">Отправить</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/addnewcontractitem.js"></script>
}